@model IEnumerable<WebTFG.Models.Producto>

<div>
    @foreach (Producto prod in Model)
    {
    <a href="@Url.Action("Producto", "Producto",  new { id = prod.IdProducto })">
        <div style="display:inline-block;max-width:20%;max-height:40%;padding-bottom: 5px;">
            <div style="border-radius: 25px;border: 2px solid #696969;padding: 20px;">
                <h3> @prod.Nombre</h3>
                <img width="100%" height="100%" src="~/Imagenes/Productos/@prod.ImagenPrincipal" runat="server" />
                <span style="white-space:nowrap">Precio: @prod.Precio €</span>
            </div>
        </div>
    </a>
    }
</div>
