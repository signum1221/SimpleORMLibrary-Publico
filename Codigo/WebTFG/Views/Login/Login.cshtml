@model String

@{
    ViewData["Title"] = "Login";
}


<div class="container">
    <h1 class="form-heading">Login</h1>
    @if(Model != null) {<div class="alert alert-danger"> @Model </div> }
    <div class="login-form">
        <div class="main-div">
            <div class="panel">
                <p>Por favor introduzca su usuario y contraseña</p>
            </div>
            <form id="Login" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" required name="username" id="username" placeholder="Nombre de usuario">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" required name="password" id="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>